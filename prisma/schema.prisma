generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  role      String   @default("USER") // USER, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  claims    Claim[]
}

model Claim {
  id          String               @id @default(uuid())
  userId      String
  user        User                 @relation(fields: [userId], references: [id])
  type        String // e.g., "Medical", "Auto"
  description String
  amount      Float
  status      ClaimStatus          @default(SUBMITTED)
  eligibility Eligibility          @default(UNKNOWN)
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  documents   Document[]
  history     ClaimStatusHistory[]
}

model Document {
  id        String   @id @default(uuid())
  claimId   String
  claim     Claim    @relation(fields: [claimId], references: [id])
  url       String
  name      String
  type      String // e.g., "application/pdf"
  createdAt DateTime @default(now())
}

model ClaimStatusHistory {
  id        String      @id @default(uuid())
  claimId   String
  claim     Claim       @relation(fields: [claimId], references: [id])
  status    ClaimStatus
  changedAt DateTime    @default(now())
  remarks   String?
}

enum ClaimStatus {
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  REJECTED
}

enum Eligibility {
  UNKNOWN
  ELIGIBLE
  NOT_ELIGIBLE
  NEEDS_REVIEW
}
